{
    "name": "salines/oauth-server",
    "description": "OAuth Server for CakePHP >=3.7 using the PHP League's OAuth2 Server",
    "type": "cakephp-plugin",
    "keywords": ["cakephp", "oauth", "oauth2", "oauth server", "oauth2 server"],
    "require": {
        "php": ">= 7.1",
        "cakephp/cakephp": "^3.7",
        "league/oauth2-server": "~4.1",
        "cakephp/migrations": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0"
    },
    "autoload": {
      "psr-4": {
        "OAuthServer\\": "src"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "Cake\\Test\\": "./vendor/cakephp/cakephp/tests",
        "OAuthServer\\Test\\": "tests"
      }
    },
    "license": "MIT",
    "authors": [
